<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/image_two"
    tools:context=".view.SearchEmployee">


    <EditText
        android:id="@+id/search"
        android:layout_margin="@dimen/header_margin"
        android:hint="Search Employee(Enter Id)"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:drawableRight="@drawable/ic_search"
        android:layout_width="match_parent"
        android:padding="@dimen/header_margin"
        android:layout_height="55dp"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_marginTop="15dp"
        android:textAllCaps="false"
        android:id="@+id/btn_search_employee"
        android:text="@string/search_employee"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:background="@drawable/search_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/details"
        android:layout_margin="@dimen/header_margin"
        android:padding="@dimen/header_margin"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>